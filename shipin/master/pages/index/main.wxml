<view style="backgroud-color:#f3f4f8;">

  <!--搜索框 start -->
  <view class="serachview">
   
      <view class="weui_cell_bd">
        <view class="weui_cell_bd_p"> 视聘</view>
      </view>
    
    <form class="formview">
      <view class="weui-search-bar">
        <view class="weui-search-bar__form">
          <view class="weui-search-bar__box">
            <icon class="weui-icon-search_in-box" type="search" size="14"></icon>
            <input type="text" class="weui-search-bar__input" placeholder="请输入职位或公司名" value="{{inputVal}}" focus="{{inputShowed}}" bindinput="inputTyping" bindconfirm="sumit" />
            <view class="weui-icon-clear" wx:if="{{inputVal.length > 0}}" bindtap="clearInput">
              <icon type="clear" size="14"></icon>
            </view>
          </view>
          <label class="weui-search-bar__label" hidden="{{inputShowed}}" bindtap="showInput">
            <icon class="weui-icon-search" type="search" size="14"></icon>
            <view class="weui-search-bar__text">请输入职位或公司名</view>
          </label>
           
        </view>

      </view>
    </form>
   
      <view class="weui_cell_bd" bindtap='searchList'>
        <view class="weui_cell_bd_p"> 查询 </view>
      </view>

  </view>
  <!--搜索框 end -->
  <view style="width:{{width}}px;height:{{height}}px;backgroud-color:#f3f4f8;" class="itemb">

    <!--数据列表模版 begin-->

      <scroll-view scroll-y="true" style="height: 100%; background: #ffffff;" bindscrolltolower="loadMore" bindscrolltoupper="refesh">
        <view wx:if="{{hasRefesh}}" style="display: flex;flex-direction: row;align-items: center;align-self: center;justify-content: center;">
          <icon type="waiting" size="45" />
          <text class="_head_price">刷新中...</text>
        </view>

        <navigator url="/pages/jobDetail/main?id={{item.id}}" class="navigator" wx:for="{{topList}}">

          <view class="_head">
            <view class="_head_title">{{item.positionName}}<view style="background: #FE4B01;font-size: 12px;color: #fff;border-radius: 10px;margin-left: 4px;width: 30px;text-align: center;height: 18px;margin-top: 2px;"> 竞价 </view>
            </view>
            <view class="_head_price red_color">{{item.salar}}</view>
          </view>

          <view class="_head content_color">
            <text class="_head_title">{{item.city}}  {{item.workingLife}}  {{item.minimumEducational}} </text>
            <view class="_head_price">{{time}}</view>
          </view>
 

          <view class="middle" wx:if="{{jobHighlights}}">
            <view class="middle_view">
              <view class="weui_cell_bd">
                <view class="weui_cell_bd_p"> {{item.jobHighlights}} </view>
              </view>
            </view>

          </view>
           
         <view class="middle">

            <view class="middle_view">
                <view class="weui_cell_bd">
                  <view class="weui_cell_bd_p"> {{item.enterpriseName}} </view>
                </view>
              </view>

             
         </view>

        </navigator>
        <navigator url="/pages/jobDetail/main?id={{item.id}}" class="navigator" wx:for="{{bidList}}">

          <view class="_head">
            
            <view class="_head_title">{{item.positionName}}<view style="background: #00d144;font-size: 12px;color: #fff;border-radius: 10px;margin-left: 4px;width: 30px;text-align: center;height: 18px;margin-top: 2px;"> 置顶 </view>
            </view>
            <view class="_head_price red_color">{{item.salar}}</view>
          </view>

          <view class="_head content_color">
            <text class="_head_title">{{item.city}}  {{item.workingLife}}  {{item.minimumEducational}} </text>
            <view class="_head_price">{{time}}</view>
          </view>
 

          <view class="middle" wx:if="{{jobHighlights}}">
            <view class="middle_view">
              <view class="weui_cell_bd">
                <view class="weui_cell_bd_p"> {{item.jobHighlights}} </view>
              </view>
            </view>

          </view>
           
         <view class="middle">

            <view class="middle_view">
                <view class="weui_cell_bd">
                  <view class="weui_cell_bd_p"> {{item.enterpriseName}} </view>
                </view>
              </view>

             
         </view>

        </navigator>
        <navigator url="/pages/jobDetail/main?id={{item.id}}" class="navigator" wx:for="{{newsList}}">

          <view class="_head">
            <view class="_head_title">{{item.positionName}}<view wx:if="{{item.isVip}}" style="background: #FE4B01;font-size: 12px;color: #fff;border-radius: 10px;margin-left: 4px;width: 30px;text-align: center;height: 18px;margin-top: 2px;"> vip </view>
            </view>
            <view class="_head_price red_color">{{item.salar}}</view>
          </view>

          <view class="_head content_color">
            <text class="_head_title">{{item.city}}  {{item.workingLife}}  {{item.minimumEducational}} </text>
            <view class="_head_price">{{time}}</view>
          </view>
 

          <view class="middle" wx:if="{{jobHighlights}}">
            <view class="middle_view">
              <view class="weui_cell_bd">
                <view class="weui_cell_bd_p"> {{item.jobHighlights}} </view>
              </view>
            </view>

          </view>
           
         <view class="middle">

            <view class="middle_view">
                <view class="weui_cell_bd">
                  <view class="weui_cell_bd_p"> {{item.enterpriseName}} </view>
                </view>
              </view>

             
         </view>

        </navigator>

      </scroll-view>


    <!--数据列表模版 end-->

    <!--列表 循环 start-->

    <!--列表 循环 end-->

    <view class="tips1">
      <view wx:if="{{hasMore}}" style="display: flex;flex-direction: row;align-items: center;align-self: center;justify-content: center;">
        <view class="weui-loading"></view>
        <view class="weui-loadmore__tips">正在加载</view>
      </view>

      <view wx:else>
        <text class="weui-loadmore__tips" style="text-align: center;">没有相应职位</text>
      </view>
    </view>
  </view>
</view>