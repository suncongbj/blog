    </view>
       <view class="cellType0" >
            <view class="weui_cell_bd">
                <view class="weui_cell_bd_p"> 职位薪资（税前） </view>
            </view>
             
            <input type='number'  placeholder="职位薪资（税前）数字" class="input0" value='{{salary}}' bindinput="getsalary">
            </input>
    </view>
    <view class="sepColorView">
            <view class="weui_cell_bd">
                <view class="weui_cell_bd_p"> 工作描述 </view>
            </view>
    </view>
    <view>
    <textarea value='{{jobDescription}}' class='textarea' bindinput="getjobDescription"></textarea>
    </view>
    


    <button class="sureBtn" bindtap='submitInfo' style="color:white"> 保    存       </button> 
  <view class="jobtype_box" wx:if="{{jobType_show}}">
    <scroll-view>
      <view wx:for="{{jobType_list1}}" bindtap="hanldeType1" data-detail="{{item}}">{{item.name}}</view>
    </scroll-view>
    <scroll-view wx:if="{{jobType_list2.length>0}}" data-detail="{{item}}">
      <view wx:for="{{jobType_list2}}" bindtap="hanldeType2" data-detail="{{item}}">{{item.name}}</view>
    </scroll-view>
    <scroll-view wx:if="{{jobType_list3.length>0}}" bindtap="hanldeType3" data-detail="{{item}}">
      <view wx:for="{{jobType_list3}}" bindtap="hanldeType3" data-detail="{{item}}">{{item.name}}</view>
    </scroll-view>
  </view>
