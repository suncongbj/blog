    <view class="cellType0" bindtap="hanldeType">
            <view class="weui_cell_bd">
                <view class="weui_cell_bd_p"> 岗位名称 </view>
            </view>
            <input placeholder="请输入职位名称" class="input0" value='{{jobType_list_result3}}'   disabled>
