<scroll-view class="myScrollView">
    <view class="cellType0" >
            <view class="weui_cell_bd">
                <view class="weui_cell_bd_p"> 公司名称 </view>
            </view>
             
            <input  placeholder="请输入公司名称" class="input0" bindinput="getcompanyName" value='{{companyName}}'>
            </input>
    </view>


    <picker mode="date"  bindchange="bindDateBegin">
        <view class="cellType0" >
            <view class="weui_cell_bd">
                <view class="weui_cell_bd_p"> 任职时间（开始） </view>
            </view>

            <view class="weui_cell_bd2">
                <view class="rightView"> {{beginDate}} </view>
            </view>

            <image class="with_arrow" src="/images/jian_r.png"></image>
        </view>
    </picker>


    <picker mode="date"  bindchange="bindDateEnd">
        <view class="cellType1">
                <view class="weui_cell_bd">
                    <view class="weui_cell_bd_p"> 任职时间（结束） </view>
                </view>

                <view class="weui_cell_bd2">
                    <view class="rightView"> {{endDate}} </view>
                </view>

                <image class="with_arrow" src="/images/jian_r.png"></image>
                
        </view>
    </picker>



