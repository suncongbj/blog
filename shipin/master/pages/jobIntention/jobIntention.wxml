<view class="container">
  <view class="info_list">

    <picker bindchange="bindPickerChange" value="{{index}}" range="{{workProperty}}" id="0">
      <view class="common_cell">
        <view class="common_cell_bd">
          <view class="common_cell_bd_p">工作性质</view>
        </view>
        <view class="badge">{{workProperty[index]}}</view>
        <view class="with_arrow"></view>
      </view>
    </picker>



    <view class="common_cell" id="3">
      <view class="common_cell_bd">
        <view class="common_cell_bd_p">工作地点</view>
      </view>
      <view class="badge">
        <input class='ship_citychoose' placeholder="选择"  value="{{province}}-{{city}}-{{county}}" focus="{{focus}}" bindfocus="open" bindinput="getAddress" />
      </view>
      <view class="with_arrow"></view>
    </view>

    <picker bindchange="bindPickerChangeSalary" value="{{indexSalary}}" range="{{salaryProperty}}" id="1">
      <view class="common_cell">
        <view class="common_cell_bd">
          <view class="common_cell_bd_p">期望薪金</view>
        </view>
        <view class="badge">{{salaryProperty[indexSalary]}}</view>
        <view class="with_arrow"></view>
      </view>
    </picker>
  </view>


  <view class="state">
    <view class="stateLabel">目前状况</view>
  </view>
  <view class="stateDistrict">
    <picker bindchange="bindPickerChangeStatus" value="{{indexStatus}}" range="{{workPropertyStatus}}">

      <view class="common_cell">
        <view class="common_cell_bd">
          <view class="common_cell_bd_p">工作状态</view>
        </view>
        <view class="badge">{{workPropertyStatus[indexStatus]}}</view>
        <view class="with_arrow"></view>
      </view>
    </picker>

  </view>

  <view class="stateDistrict">
    <button class="saveBtn" bindtap="saveJobIntention">保存</button>


  </view>
</view>






<!--下拉出来的城市选择-->
<view wx:if="{{condition}}" class="citypicker">
  <picker-view indicator-style="height: 50px;" style="width: 100%; height: 300px;" value="{{value}}" bindchange="bindChange" class="citybody">
    <view class="cityheader">
      <view bindtap="open" class="city-cancel">取消</view>
      <view bindtap="open" class="city-true">确定</view>
    </view>
    <picker-view-column>
      <view wx:for="{{provinces}}" wx:key="item" style="line-height: 50px;padding-left:10px;">{{item}}</view>
    </picker-view-column>
    <picker-view-column>
      <view wx:for="{{citys}}" wx:key="item" style="line-height: 50px;padding-left:10px;">{{item}}</view>
    </picker-view-column>
    <picker-view-column>
      <view wx:for="{{countys}}" wx:key="item" style="line-height: 50px;padding-left:10px;">{{item}}</view>
    </picker-view-column>
  </picker-view>
</view>