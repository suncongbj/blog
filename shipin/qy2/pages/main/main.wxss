.box {
  padding: 20rpx;
  border-bottom: 8px solid #f0f0f0;
}
.box_cl{
  display: flex;justify-content: space-between;
  margin-bottom: 8px;
}
.bgClass {
  height: 100%;
}

.search-bar {
  position: fixed;
  z-index: 2;
  top: 0;
  left: 0;
  background: #007acc;
  width: 100%;
  background: #f0f0f0;
  height: 100rpx;
  display: flex;align-items: center;justify-content: center;
}

.search-bar button {
  height: 70rpx;
  line-height: 70rpx;
  width: 140rpx;
  font-size: 30rpx;
  color: #fbf9fe;
  margin: 0;
  margin-left: 20px;
}

.search-bar input {
  background-color: #fff;
  border-radius: 5px;
  width: 480rpx;
  height: 70rpx;
  padding-left: 10px;
  box-sizing: border-box;
}
.header {
  width: 100%;
  height: 60px;
  background: #007acc;
  overflow: hidden;
}

.header .search {
  width: 90%;
  height: 38px;
  margin: 0 auto;
  background: #fff;
  border-radius: 30px;
  margin-top: 10px;
  font-size: 14px;
  text-align: left;
  line-height: 38px;
  position: relative;
  overflow: hidden;
  position: relative;
}

.header .search  .iconfont {
  display: inline-block;
  position: absolute;
  left: 10px;
  font-size: 12px;
}

.header .search  input {
  width: 100%;
  height: 100%;
  padding-left: 30px;
}
.list-mid{
  font-size:24rps;
  line-height:44rpx; 
}
.list-wrapper {
  background: #fff;
  padding: 12px;
  box-sizing: border-box;
  display: flex;
  display: flex;
  justify-content: space-between;
  margin:5px;
}

.list-top .list-center .list-bottom {
  display: flex;
  font-size: 12px;
  color: #666;
  line-height: 26px;
}

.list-top .list-center  .list-left {
  flex: 1;
  text-align: left;
}
 
.list-top .list-center  .list-right {
  text-align: right;
  flex: 0 0 80px;
}

.list-top {
  line-height: 33.3px; 
  font-weight: 700;
}

.list-left .list-top   {
  color: #282828; 
  font-size: 32rpx;
}
.list-left .list-mid   { 
   font-size:24rpx;
}

 .list-right .list-top  {
 font-size: 32rpx;
  color: #ec675d;
}
