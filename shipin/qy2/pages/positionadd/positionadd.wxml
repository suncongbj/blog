 
<scroll-view class="myScrollView">
  <view class="cellType0">
    <view class="weui_cell_bd">
      <view class="weui_cell_bd_p"> <label style='color:red'>*</label>  职位名称 </view>
    </view>
    <input placeholder="请输入职位名称" class="input0" bindinput="getJobName" value='{{jobName}}'>
    </input>
  </view>


  <view class="cellType0" bindtap="hanldeType">
    <view class="weui_cell_bd">
      <view class="weui_cell_bd_p"> <label style='color:red'>*</label> 职位类型 </view>
    </view>
    <input wx:if="{{jobType_list_result3}}" placeholder="请输入职位类型" class="input0" disabled="true" value='{{jobType_list_result3}}'>
    </input>
    <input wx:else placeholder="请输入职位类型" class="input0" disabled="true" value=''>
    </input>
    <image style="opacity: 0" class="with_arrow" src="/images/jian_r.png"></image>
  </view>

 

    <view class="cellType1 cellType1_bottom" bindtap="salarySelect">
    <view class="weui_cell_bd">
      <view class="weui_cell_bd_p"> <label style='color:red'>*</label> 职位月薪 </view>
    </view>
    <view class="weui_cell_bd2">
      <view class="rightView" wx:if="{{salaryValue}}"> {{salaryValue}} </view>
      <view class="rightView" wx:else>请选择职位月薪</view>
    </view>
    <image class="with_arrow" src="/images/jian_r.png"></image>
  </view>

  <view class="cellType0">
    <view class="weui_cell_bd">
      <view class="weui_cell_bd_p"><label style='color:red'>*</label>  职位性质 </view>
    </view>
      <picker style="width: 470rpx;height: 22px;"bindchange="pickerJobXz" range="{{jobXz_picker}}" class="badge">
        <view class="ship_citychoose" wx:if="{{jobXz}}" style="position:absolute;right:15px;text-align:left;font-size:12px;color:#939393;height:15px;width:60%;">
          {{jobXz}}
        </view>
        <input disabled="true" placeholder="请选择职位性质" class="input0" wx:else></input>
      </picker>
    <image class="with_arrow" src="/images/jian_r.png"></image>
  </view>

  <view class="cellType0">
    <view class="weui_cell_bd">
      <view class="weui_cell_bd_p"> <label style='color:red'>*</label> 上班地点 </view>
    </view>
      <picker style="width: 470rpx;height: 22px;" mode="region" bindchange="bindRegionChange" custom-item="{{customItem}}" class="badge">
        <view class="ship_citychoose" wx:if="{{liveRegion[0]}}" style="position:absolute;right:15px;text-align:left;font-size:12px;color:#939393;height:15px;width:60%;">
          {{liveRegion[0]}}{{liveRegion[1]}}{{liveRegion[2]}}
        </view>
        <input disabled="true" placeholder="请选择上班地点" class="input0" bindinput="getJobAddress" value='{{jobAddress}}' wx:else></input>
      </picker>
    <image class="with_arrow" src="/images/jian_r.png"></image>
  </view>

  <view class="cellType0">
    <view class="weui_cell_bd">
      <view class="weui_cell_bd_p"><label style='color:red'>*</label>  详细地址 </view>
    </view>
    <input placeholder="请输入详细地址" class="input0" bindinput="getJobAddress" value='{{jobAddress}}'>
    </input>
  </view>

  <view class="cellType0">
    <view class="weui_cell_bd">
      <view class="weui_cell_bd_p"> <label style='color:red'>*</label> 招聘人数 </view>
    </view>
    <input placeholder="请输入招聘人数" type='number' class="input0" bindinput="getJobNum" value='{{jobNum}}'>
    </input>
    <image style="opacity: 0" class="with_arrow" src="/images/jian_r.png"></image>
  </view>

  
  <view class="cellType0">
    <view class="weui_cell_bd">
      <view class="weui_cell_bd_p"> <label style='color:red'>*</label>  联系方式 </view>
    </view>
    <input placeholder="请输入联系方式" maxlength="11" class="input0" bindinput="handleContactNumber" value='{{handleContactNumber}}'>
    </input>
  </view>

  <view class="cellType1 cellType1_bottom" bindtap="xueliSelect">
    <view class="weui_cell_bd">
      <view class="weui_cell_bd_p"> <label style='color:red'>*</label> 学历要求 </view>
    </view>
    <view class="weui_cell_bd2">
      <view class="rightView" wx:if="{{xueliValue}}"> {{xueliValue}} </view>
      <view class="rightView" style="color: #999" wx:else>请选择学历要求</view>
    </view>
    <image class="with_arrow" src="/images/jian_r.png"></image>
  </view>

  <view class="cellType1 cellType1_bottom" bindtap="workAgeSelect">
    <view class="weui_cell_bd">
      <view class="weui_cell_bd_p"><label style='color:red'>*</label>  工作年限 </view>
    </view>
    <view class="weui_cell_bd2">
      <view class="rightView" wx:if="{{workAgeValue}}"> {{workAgeValue}} </view>
      <view class="rightView" wx:else>请选择工作年限</view>
    </view>
    <image class="with_arrow" src="/images/jian_r.png"></image>
  </view>

  <view class="sepColorView">
    <view class="weui_cell_bd">
      <view class="weui_cell_bd_p"> <label style='color:red'>*</label> 职位描述 </view>
    </view>
  </view>

  <view>
    <textarea value='{{jobDesc}}' class='textarea' bindinput="getJobDesc" style="z-index: 1" wx:if="{{!jobType_show&&workAgeSelectShow&&xueliSelectShow&&job_dy_show=='none'&&salarySelectShow}}"></textarea>
  </view>


  
  <view class="cellType0">
    <view class="weui_cell_bd">
      <view class="weui_cell_bd_p"> 职位待遇 </view>
    </view>
      <view style="width: 470rpx;height: 22px;"bindtap="handleDy"  class="badge">
        <view class="ship_citychoose" wx:if="{{job_dy}}" style="position:absolute;right:15px;text-align:left;font-size:12px;color:#939393;height:15px;width:60%;">
          {{job_dy}}
        </view>
        <input disabled="true" placeholder="请选择职位福利" class="input0" wx:else></input>
      </view>
    <image class="with_arrow" src="/images/jian_r.png"></image>
  </view>

  <view style="position: fixed;top: 0;left: 0;background: #fff;width: 100%;height: 100%;;justify-content: center;align-items: center;flex-direction: column;z-index: 999;display: {{job_dy_show}}">
    <checkbox-group bindchange="checkboxChange" style="padding-top: 100rpx;padding-left: 100rpx;box-sizing: border-box;display: flex;flex-direction: column;">
      <label style="margin-top: 6px" class="checkbox" wx:for="{{job_dy_list}}">
        <checkbox value="{{item.value}}" checked="{{item.checked}}"/>
        {{item.value}}
      </label>
    </checkbox-group>
    <view style="display: flex;width: 60%;flex-direction: row-reverse;color: #FDD000;margin-top: 20px">
      <view bindtap="checkboxSubmit" style="margin-left: 18px">确认</view>
      <view bindtap="checkboxClose">取消</view>
    </view>
  </view>

  <view class="jobtype_box" wx:if="{{jobType_show}}">
    <scroll-view>
      <view wx:for="{{jobType_list1}}" bindtap="hanldeType1" data-detail="{{item}}">{{item.name}}</view>
    </scroll-view>
    <scroll-view wx:if="{{jobType_list2.length>0}}" data-detail="{{item}}">
      <view wx:for="{{jobType_list2}}" bindtap="hanldeType2" data-detail="{{item}}">{{item.name}}</view>
    </scroll-view>
    <scroll-view wx:if="{{jobType_list3.length>0}}" bindtap="hanldeType3" data-detail="{{item}}">
      <view wx:for="{{jobType_list3}}" bindtap="hanldeType3" data-detail="{{item}}">{{item.name}}</view>
    </scroll-view>
  </view>

  <button class="sureBtn" bindtap='submitInfo' style="color:white"> 保 存 </button>

</scroll-view>

  <action-sheet hidden="{{workAgeSelectShow}}" bindchange="workAgeSelect">
    <block wx:for-items="{{workAge}}" wx:for-index="index">
      <action-sheet-item bindtap="bindWorkAgeTap" data-name="{{item}}" data-id="{{index}}">{{item}}</action-sheet-item>
    </block>
    <action-sheet-cancel>取消</action-sheet-cancel>
  </action-sheet>

    <action-sheet hidden="{{xueliSelectShow}}" bindchange="xueliSelect">
    <block wx:for-items="{{xueliArray}}" wx:for-index="index">
      <action-sheet-item bindtap="bindxueliTap" data-name="{{item}}" data-id="{{index}}">{{item}}</action-sheet-item>
    </block>
    <action-sheet-cancel>取消</action-sheet-cancel>
  </action-sheet>

      <action-sheet hidden="{{salarySelectShow}}" bindchange="salarySelect">
    <block wx:for-items="{{salaryArray}}" wx:for-index="index">
      <action-sheet-item bindtap="bindsalaryTap" data-name="{{item}}" data-id="{{index}}">{{item}}</action-sheet-item>
    </block>
    <action-sheet-cancel>取消</action-sheet-cancel>
  </action-sheet>