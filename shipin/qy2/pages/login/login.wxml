<view class="content">
    <view class = "logo">
        视聘
    </view>
    <form bindsubmit="formSubmit">
        <view class="input-area">
          <input id="username" name="username" maxlength='40' type="text" placeholder="手机号" bindinput="getPhone" />
          <input id="password" name="password" maxlength='20' type="password" placeholder="密码" bindinput="getpwd" />
        </view>
        <view class="btn-area">
            <button  disabled="{{disabled}}" style="background-color:{{loginBtnBgBgColor}}"   formType="submit"  loading="{{btnLoading}}"> {{loginBtnTxt}} </button>
           <view class="txt-area">
                <navigator url="../regist/index"><text class="register">注册账号</text></navigator> 
                <navigator url="../register/register"><text class="register">忘记密码</text></navigator> 
            </view>
        </view>
    </form>

    
    <button bindtap="weixinLogin" style=";color:#fff;margin-top: 300rpx;text-align: center;width:400rpx;background: #00CE35;border-radius: 100px;">
        微信快捷登录
    </button>
</view>